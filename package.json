{
    "name": "macroll",
    "version": "0.1.1",
    "description": "Ultra-customizable macros for roll20.net",
    "license": "MIT",
    "scripts": {
        "watch": "webpack --watch",
        "build": "run-s build:*",
        "test": "nyc ./node_modules/.bin/_mocha 'test/**/*.test.ts'",
        "clean": "run-s clean:*",
        "lint": "run-s lint:*",
        "coverage": "nyc report --reporter=text-lcov > coverage/lcov.info",
        "debug-build": "webpack",
        "build:webpack": "cross-env NODE_ENV=production webpack",
        "build:package": "web-ext build --source-dir dist --overwrite-dest",
        "clean:dist": "rimraf dist",
        "clean:web-ext": "rimraf web-ext-artifacts",
        "clean:nyc": "rimraf .nyc_output",
        "clean:coverage": "rimraf coverage",
        "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:web-ext": "web-ext lint --source-dir dist"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@testdeck/mocha": "^0.1.2",
        "@typescript-eslint/eslint-plugin": "^4.11.0",
        "@typescript-eslint/parser": "^4.11.0",
        "chai": "^4.2.0",
        "copy-webpack-plugin": "^7.0.0",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.14.0",
        "mocha": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "ts-loader": "^8.0.12",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "web-ext": "^5.4.1",
        "webextension-polyfill-ts": "^0.22.0",
        "webpack": "^5.11.0",
        "webpack-cli": "^4.2.0"
    }
}
